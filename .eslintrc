{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": { 
        "indent": ["error", 4],
        "max-len": ["error", { "code": 120 }],
        "quote-props": ["error", "always"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"]
      }
  }